<template>
  <view>
    <qy-tip :content.sync="errMsg" :on.sync="errRequest" />
    <view style="width:750rpx;">
      <view hidden="{{shown}}">
        <repeat for="{{allFeedback}}" index="index" key="key" item="item">
          <view class="feedback-status" style="border-top:{{index === 0 ? '1rpx solid #E3E3E3' : ''}}" @tap="showDetail" data-id="{{item.id}}" data-status="{{item.status}}">
            <view class="feedback-status-image" style="background-image:url({{(item.status !== 2 && item.status !== '2') ? 'https://static.airbob.org/under-graduate/feedback/pic_todo.png' : 'https://static.airbob.org/under-graduate/feedback/pic_finish.png'}})"></view>
            <view class="feedback-status-detail">
              <view class="{{(item.status !== 2 && item.status !== '2') ? 'status' : 'status-done'}}">{{(item.status !== 2 && item.status !== '2') ? '处理中' : '处理完成'}}</view>
              <view>{{item.question}}</view>
              <view class="last-word">{{item.lastWord}}</view>
            </view>
            <view class="feedback-status-time">{{item.time}}</view>
          </view>
        </repeat>
      </view>
      <view hidden="{{!shown}}">
        <view class="my-feedback">
          <view style="margin-bottom:300rpx;">
            <repeat for="{{myFeed}}" index="index" key="key" item="item">
              <view wx:if="{{item.status === 'user'}}" class="my-content" animation="{{animationPush}}" style="min-height:{{item.feedtype === 'image' ? '600rpx' : '100rpx'}};">
                <view class="my-content-container">
                  <view class="my-content-detail">
                    <view class="loading-area">
                      <view wx:if="{{!LoadingHide[index]}}">
                        <i class="weui-loading"></i>
                      </view>
                      <view wx:if="{{sendErr[index]}}">
                        <image style="width:40rpx;height:40rpx;" src="https://static.airbob.org/under-graduate/more/icon_fail.png" mode="aspectFit"/>
                      </view>
                    </view>
                    <view wx:if="{{item.feedtype === 'content'}}" >{{item.content}}</view>
                    <view wx:if="{{item.feedtype === 'image'}}">
                      <image wx:if="{{item.feedtype === 'image'}}" class="feed-image" src="{{item.content}}" mode="aspectFit"/>
                    </view>
                    <view class="my-content-arrow"></view>
                  </view>
                </view>
                <view class="my-portrait" style="background-image:url({{portrait}});"></view>
              </view>
              <view wx:if="{{item.status === 'manage'}}" class="my-content" style="min-height:{{item.feedtype === 'image' ? '600rpx' : '100rpx'}};left:0;">
                <view class="my-content-container">
                  <view class="my-content-detail-left">
                    <view wx:if="{{item.feedtype === 'content'}}" >{{item.content}}</view>
                    <view wx:if="{{item.feedtype === 'image'}}">
                      <image wx:if="{{item.feedtype === 'image'}}" class="feed-image" src="{{item.content}}" mode="aspectFit"/>
                    </view>
                    <view class="my-content-arrow"></view>
                  </view>
                </view>
                <view class="my-portrait-left"></view>
              </view>
            </repeat>
            <view class="close-feedback" hidden="{{feedbackFinish || feedbackClosed}}" style="z-index:100;" @tap.stop="closeFeedback">关闭工单</view>
            <view class="close-feedback" hidden="{{feedbackFinish || !feedbackClosed}}" id="close" animation="{{animation_1}}" @tap.stop="confirmClose">关闭</view>
            <view class="close-feedback" hidden="{{feedbackFinish || !feedbackClosed}}" id="cancel" animation="{{animation_2}}" @tap.stop="closeFeedback">取消</view>            
            <view class="finish" hidden="{{!feedbackFinish}}">
              <view class="finish-line"></view>
              工单处理完成
              <view class="finish-line"></view>
            </view>
          </view>
          <view class="type-in">
            <view class="type-in-image" @tap="chooseImage"></view>
            <input value="{{content}}" class="type-in-word" placeholder="编辑好按Enter键直接发送哦" placeholder-style="color:#888888;font-size:28rpx;" @input="inputWord" @confirm="searchSubmit"/>
          </view>
        </view>
      </view>
    </view>
  </view>
</template>

<script>
import wepy from "wepy";
import tip from "@/components/qy-tip";

export default class extends wepy.page {
  config = {
    navigationBarTitleText: "历史反馈"
  };
  data = {
    allFeedback: [],
    shown: false,
    animationTop: {},
    winWidth: 0,
    winHeight: 0,
    myFeed: [],
    content: "",
    animationPush: {},
    feedbackFinish: true,
    LoadingHide: [],
    sendErr: [],
    feedbackId: "",
    errRequest: false,
    errMsg: "",
    portrait: "",
    feedbackClosed: false,
    animation_1: {},
    animation_2: {}
  };
  components = {
    "qy-tip": tip
  };
  methods = {
    async showDetail(e) {
      let that = this;
      this.shown = !this.shown;
      let id = e.currentTarget.dataset.id;
      this.feedbackId = id;
      if (
        e.currentTarget.dataset.status === 1 ||
        e.currentTarget.dataset.status === 0
      ) {
        that.feedbackFinish = false;
      } else {
        that.feedbackFinish = true;
      }
      that.$apply();
      await wepy
        .request({
          url:
            this.$parent.globalData.requestUrl +
            this.$parent.globalData.config.reaction +
            "/" +
            this.feedbackId +
            this.$parent.globalData.config.reactionIDdetail
        })
        .then(res => {
          let response = res.data;
          if (response.success) {
            response.data.forEach((element, index) => {
              that.sendErr[index] = false;
              that.LoadingHide[index] = true;
              that.myFeed.push({
                content:
                  element.contentType === 0
                    ? element.message
                    : "http://" + element.picUrl,
                feedtype: element.contentType === 0 ? "content" : "image",
                status: element.createUser === 0 ? "user" : "manage"
              });
            });
            setTimeout(() => {
              let animation = wepy.createAnimation({
                duration: 0
              });
              animation.translate(-this.winWidth, 0).step();
              that.animationPush = animation.export();
              that.$apply();
              that.animationPush = {};
            }, 0);
            that.$apply();
          }
        });
    },
    chooseType(e) {
      let index = e.currentTarget.dataset.index;
      this.titles[index].show = true;
      let animation = wepy.createAnimation({
        duration: "500",
        delay: "300"
      });
      animation.translate(0, -this.winHeight).step();
      this.animationTop = animation.export();
      setTimeout(() => {
        this.pullUp = true;
        this.navTitle = "我要反馈";
        this.$apply();
      }, 800);
      this.$apply();
    },
    inputWord(e) {
      this.content = e.detail.value;
    },
    async chooseImage() {
      let that = this;
      if (!this.feedbackFinish) {
        await wepy
          .chooseImage({
            count: 1
          })
          .then(e => {
            let tempFilePaths = e.tempFilePaths[0];
            that.LoadingHide[this.LoadingHide.length] = false;
            that.sendErr[this.sendErr.length] = false;
            that.myFeed.push({
              content: tempFilePaths,
              feedtype: "image",
              status: "user"
            });
            let url =
              this.$parent.globalData.requestUrl +
              this.$parent.globalData.config.reaction +
              "/" +
              this.feedbackId +
              this.$parent.globalData.config.reactionImage;
            wepy
              .uploadFile({
                url: url,
                filePath: tempFilePaths,
                name: "file",
                data: {
                  file: tempFilePaths
                },
                header: {
                  Cookie: "session_id=" + wepy.getStorageSync("token")
                }
              })
              .then(res => {
                let response = JSON.parse(res.data);
                if (!response.success) {
                  that.errRequest = true;
                  that.errMsg = response.errMsg;
                  that.LoadingHide[that.LoadingHide.length - 1] = true;
                  that.sendErr[this.sendErr.length - 1] = true;
                  that.$apply();
                } else {
                  that.LoadingHide[that.LoadingHide.length - 1] = true;
                  that.$apply();
                }
              });
            that.$apply();
            setTimeout(() => {
              let animation = wepy.createAnimation({
                duration: 200
              });
              animation.translate(-this.winWidth, 0).step();
              that.animationPush = animation.export();
              that.$apply();
              that.animationPush = {};
            }, 0);
            wepy.pageScrollTo({
              scrollTop: 9999999
            });
          });
      }
    },
    async searchSubmit() {
      if (!this.feedbackFinish) {
        if (this.content !== "") {
          this.LoadingHide[this.LoadingHide.length] = false;
          this.sendErr[this.sendErr.length] = false;
          this.myFeed.push({
            content: this.content,
            feedtype: "content",
            status: "user"
          });
        }
        let url =
          this.$parent.globalData.requestUrl +
          this.$parent.globalData.config.reaction +
          "/" +
          this.feedbackId +
          this.$parent.globalData.config.reactionContent;
        let that = this;
        await wepy
          .request({
            url: url,
            data: {
              message: this.content
            },
            method: "POST"
          })
          .then(res => {
            let response = res.data;
            if (!response.success) {
              that.errRequest = true;
              that.errMsg = response.errMsg;
              that.LoadingHide[that.LoadingHide.length - 1] = true;
              that.sendErr[this.sendErr.length - 1] = true;
              that.$apply();
            } else {
              that.LoadingHide[that.LoadingHide.length - 1] = true;
            }
          });
        this.content = "";
        wepy.pageScrollTo({
          scrollTop: 9999999
        });
        setTimeout(() => {
          let animation = wepy.createAnimation({
            duration: 200
          });
          animation.translate(-this.winWidth, 0).step();
          this.animationPush = animation.export();
          this.$apply();
          this.animationPush = {};
        }, 0);
      }
    },
    closeFeedback(e) {
      let that = this;
      let flag = this.feedbackClosed;
      if (!this.feedbackClosed) {
        this.feedbackClosed = true;
        this.$apply();
      } else {
        setTimeout(() => {
          that.feedbackClosed = false;
          that.$apply();
        }, 300);
      }
      let animation = wepy.createAnimation({
        duration: 300
      });
      let animation2 = wepy.createAnimation({
        duration: 300
      });
      animation
        .right(flag ? "20rpx" : "200rpx")
        .width(flag ? "260rpx" : "140rpx")
        .step();
      animation2.width(flag ? "260rpx" : "140rpx").step();
      this.animation_1 = animation.export();
      this.animation_2 = animation2.export();
      this.$apply();
    },
    async confirmClose() {
      let that = this;
      let response = await wepy.request({
        url:
          this.$parent.globalData.requestUrl +
          this.$parent.globalData.config.reaction +
          "/" +
          this.feedbackId,
        method: "PUT",
        data: {
          status: 2
        }
      });
      if (response.data.success) {
        let animation = wepy.createAnimation({
          duration: 300
        });
        let animation2 = wepy.createAnimation({
          duration: 300
        });
        animation.right("-400rpx").step();
        animation2.right("-400rpx").step();
        this.animation_1 = animation.export();
        this.animation_2 = animation2.export();
        this.$apply();
        setTimeout(() => {
          that.feedbackFinish = true;
          that.$apply();
        }, 300);
      }
    }
  };
  async onLoad() {
    this.portrait = wepy.getStorageSync("User").nativeInformation.avatar;
    let that = this;
    await wepy.getSystemInfo().then(res => {
      this.winWidth = parseInt(res.windowWidth);
      this.winHeight = parseInt(res.windowHeight);
    });
    await wepy
      .request({
        url:
          this.$parent.globalData.requestUrl +
          this.$parent.globalData.config.reaction +
          "/"
      })
      .then(res => {
        let response = res.data;
        if (response.success) {
          response.data.forEach(element => {
            if (element.lastDetailModel !== null) {
              that.allFeedback.push({
                time: element.lastDetailModel.gmtCreate,
                status: element.status,
                lastWord:
                  element.lastDetailModel.contentType === 0
                    ? element.lastDetailModel.message
                    : "【图片】",
                question: element.tag,
                id: element.id
              });
            }
          });
        }
      });
    setTimeout(() => {
      let animation = wepy.createAnimation({
        duration: 200
      });
      animation.translate(-this.winWidth, 0).step();
      that.animationPush = animation.export();
      that.$apply();
      that.animationPush = {};
    }, 0);
  }
}
</script>

